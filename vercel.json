{
    "version": 2,
    "builds": [
      {
        "src": "socketio-server/server.ts",
        "use": "@vercel/node",
        "config": { "maxLambdaSize": "15mb" }
      },
      {
        "src": "react-client/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "react-client/dist"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/socketio-server/server.ts"
      },
      {
        "src": "/(.*)",
        "dest": "/react-client/dist/$1" 
      }
    ],
    "buildCommand": "npm install --force && npm run build"
  }
  